    padding: 12px !important;
  }
  
  .v-list-item {
    min-height: 56px !important;
    padding: 12px 16px !important;
  }
  
  /* Mejorar espaciado del men칰 de accesibilidad */
  .v-card .v-card-text {
    padding: 20px !important;
  }
  
  /* Asegurar que el texto sea legible en m칩viles */
  html[class*="text-scale-"] {
    font-size: calc(16px * var(--text-scale-factor)) !important;
  }
}

/* =========================================
   ESTADOS DE HOVER Y FOCUS
   ========================================= */

/* Mejorar estados hover */
.v-btn:hover:not(:disabled) {
  transform: translateY(-1px) !important;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2) !important;
  transition: all 0.2s ease !important;
}

.reduced-motion-mode .v-btn:hover:not(:disabled) {
  transform: none !important;
  transition: none !important;
}

/* Estados de carga mejorados */
.v-btn--loading {
  pointer-events: none !important;
  opacity: 0.7 !important;
}

/* =========================================
   COMPATIBILIDAD CON TEMAS VUETIFY
   ========================================= */

/* Asegurar que los temas personalizados funcionen correctamente */
.v-theme--light {
  --focus-color: #1976D2;
  --enhanced-focus-color: #1976D2;
}

.v-theme--dark {
  --focus-color: #64B5F6;
  --enhanced-focus-color: #64B5F6;
}

/* Mejorar contraste en tarjetas */
.v-theme--dark .v-card {
  background-color: #2D2D2D !important;
  border: 1px solid #404040 !important;
}

.v-theme--light .v-card {
  background-color: #FFFFFF !important;
  border: 1px solid #E0E0E0 !important;
}

/* =========================================
   MEJORAS ESPEC칈FICAS PARA NAVEGACI칍N
   ========================================= */

/* Mejorar navegaci칩n por teclado - integrado con foco mejorado */
.v-navigation-drawer .v-list-item:focus {
  background-color: rgba(var(--v-theme-primary), 0.1) !important;
}

/* Override cuando foco mejorado est치 activo */
.enhanced-focus-mode .v-navigation-drawer .v-list-item:focus {
  background-color: var(--enhanced-focus-bg) !important;
  outline: var(--enhanced-focus-width) solid var(--enhanced-focus-color) !important;
  border-left: 6px solid var(--enhanced-focus-color) !important;
}

/* Indicador visual para elementos activos */
.v-navigation-drawer .v-list-item--active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4px;
  background-color: rgb(var(--v-theme-primary));
}

/* Mejorar indicador cuando foco mejorado est치 activo */
.enhanced-focus-mode .v-navigation-drawer .v-list-item--active:focus::before {
  width: 8px;
  background-color: var(--enhanced-focus-color);
}

/* =========================================
   PRINT STYLES
   ========================================= */
@media print {
  /* Asegurar buena impresi칩n */
  * {
    background: white !important;
    color: black !important;
    box-shadow: none !important;
  }
  
  .v-btn,
  .v-navigation-drawer,
  .accessibility-controls {
    display: none !important;
  }
}
